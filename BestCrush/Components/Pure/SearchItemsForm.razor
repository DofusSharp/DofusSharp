        <InputCheckbox @bind-Value="Model.EquipmentType.Animals" class="btn-check" id="btn-animals" autocomplete="off" disabled="@Disabled"/>
        <label class="btn btn-light border" for="btn-animals"><img src="img/companions.png" width="24" height="24" alt="Animals"/></label>

        <InputCheckbox @bind-Value="Model.EquipmentType.Trophy" class="btn-check" id="btn-trophy" autocomplete="off" disabled="@Disabled"/>
        <label class="btn btn-light border" for="btn-trophy"><img src="img/trophee.png" width="24" height="24" alt="Trophy"/></label>
