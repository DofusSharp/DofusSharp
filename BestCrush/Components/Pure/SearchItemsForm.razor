@using BestCrush.Models
<div class="input-group mb-3">
    <span class="input-group-text">Level</span>
    <InputNumber @bind-Value="Model.LevelMin" class="form-control" placeholder="Min" aria-label="Min" disabled="@Disabled"/>
    <span class="input-group-text">to</span>
    <InputNumber @bind-Value="Model.LevelMax" class="form-control" placeholder="Max" aria-label="Max" disabled="@Disabled"/>
</div>
<div class="d-flex gap-4 mb-3">
    <div class="input-group flex-nowrap">
        <span class="input-group-text">Equipments</span>

        <InputCheckbox @bind-Value="Model.EquipmentType.Amulet" class="btn-check" id="btn-amulet" autocomplete="off" disabled="@Disabled"/>
        <label class="btn btn-light border" for="btn-amulet"><img src="img/necklace.png" width="24" height="24" alt="Amulet"/></label>

        <InputCheckbox @bind-Value="Model.EquipmentType.Ring" class="btn-check" id="btn-ring" autocomplete="off" disabled="@Disabled"/>
        <label class="btn btn-light border" for="btn-ring"><img src="img/ring.png" width="24" height="24" alt="Ring"/></label>

        <InputCheckbox @bind-Value="Model.EquipmentType.Belt" class="btn-check" id="btn-belt" autocomplete="off" disabled="@Disabled"/>
        <label class="btn btn-light border" for="btn-belt"><img src="img/belt.png" width="24" height="24" alt="Belt"/></label>

        <InputCheckbox @bind-Value="Model.EquipmentType.Boots" class="btn-check" id="btn-boots" autocomplete="off" disabled="@Disabled"/>
        <label class="btn btn-light border" for="btn-boots"><img src="img/boots.png" width="24" height="24" alt="Boots"/></label>

